<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullXamarinPlayGround.ProgressBar">
    <ContentPage.Content>
        <StackLayout>
            <ProgressBar x:Name="progress"
                         Progress="0.2"
                         WidthRequest="300"
                         HeightRequest="20"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         />
            <Label Text="{Binding Progress, Source={x:Reference progress}}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>