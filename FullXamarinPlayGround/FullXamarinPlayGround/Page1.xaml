<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullXamarinPlayGround.Page1"
             Title="Page 1">
    <StackLayout 
        BackgroundColor="Azure"
        Padding="30"
        >
        <Entry Placeholder="enter your name"
                   x:Name="NameEntered"
                   BackgroundColor="AliceBlue"/>
        <Button Clicked="ConfirmName"
                    Text="Submit"/>
        <Label x:Name="EnteredName"/>

        <Button
            Text="Navigate Parameter"
            Clicked="Navigate"/>
    </StackLayout>
</ContentPage>