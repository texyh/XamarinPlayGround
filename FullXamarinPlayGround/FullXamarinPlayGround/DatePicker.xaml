<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FullXamarinPlayGround.DatePicker">

    <StackLayout>
        <DatePicker MinimumDate="8/21/2017"
                    MaximumDate="12/12/2017"
                    x:Name="date"/>

        <Label
               Text="{Binding Date, Source={x:Reference date}}"/>

    </StackLayout>
</ContentPage>